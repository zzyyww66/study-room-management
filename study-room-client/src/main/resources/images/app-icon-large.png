<?xml version="1.0" encoding="UTF-8"?>
<!-- Apple风格应用图标设计 - 共享自习室管理系统 -->
<svg width="1024" height="1024" viewBox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- 苹果风格渐变 -->
    <linearGradient id="mainGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#007AFF;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#5AC8FA;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#34C759;stop-opacity:1" />
    </linearGradient>
    
    <!-- 阴影滤镜 -->
    <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="0" dy="8" stdDeviation="16" flood-color="rgba(0,122,255,0.3)"/>
    </filter>
    
    <!-- 毛玻璃效果 -->
    <filter id="blur" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="2"/>
    </filter>
  </defs>
  
  <!-- 背景圆角矩形 -->
  <rect x="128" y="128" width="768" height="768" rx="180" ry="180" 
        fill="url(#mainGradient)" filter="url(#shadow)"/>
  
  <!-- 主图标 - 书桌/座位 -->
  <g transform="translate(256, 300)">
    <!-- 桌面 -->
    <rect x="0" y="100" width="512" height="120" rx="20" ry="20" 
          fill="rgba(255,255,255,0.9)" opacity="0.95"/>
    
    <!-- 椅子 -->
    <rect x="40" y="200" width="80" height="120" rx="15" ry="15" 
          fill="rgba(255,255,255,0.8)" opacity="0.9"/>
    <rect x="20" y="160" width="120" height="60" rx="30" ry="30" 
          fill="rgba(255,255,255,0.8)" opacity="0.9"/>
    
    <rect x="352" y="200" width="80" height="120" rx="15" ry="15" 
          fill="rgba(255,255,255,0.8)" opacity="0.9"/>
    <rect x="332" y="160" width="120" height="60" rx="30" ry="30" 
          fill="rgba(255,255,255,0.8)" opacity="0.9"/>
  </g>
  
  <!-- 装饰元素 - 书籍 -->
  <g transform="translate(350, 380)">
    <rect x="0" y="0" width="80" height="8" rx="4" ry="4" 
          fill="rgba(255,149,0,0.8)"/>
    <rect x="10" y="10" width="60" height="8" rx="4" ry="4" 
          fill="rgba(255,59,48,0.8)"/>
    <rect x="20" y="20" width="40" height="8" rx="4" ry="4" 
          fill="rgba(52,199,89,0.8)"/>
  </g>
  
  <!-- 状态指示器 -->
  <circle cx="800" cy="300" r="40" fill="rgba(52,199,89,0.9)" filter="url(#shadow)"/>
  <circle cx="800" cy="300" r="20" fill="rgba(255,255,255,0.9)"/>
  
  <!-- 高光效果 -->
  <ellipse cx="400" cy="200" rx="300" ry="60" 
           fill="rgba(255,255,255,0.3)" opacity="0.6"/>
</svg> 