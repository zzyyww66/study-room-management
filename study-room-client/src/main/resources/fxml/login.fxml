<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studyroom.client.controller.LoginController">
   <center>
      <GridPane alignment="CENTER" hgap="10.0" vgap="15.0" styleClass="login-container">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="250.0" prefWidth="300.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <!-- 应用图标和标题 -->
            <VBox alignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="0">
               <children>
                  <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true">
                     <image>
                        <Image url="@../images/app-icon.png" />
                     </image>
                  </ImageView>
                  <Label styleClass="login-title" text="共享自习室管理系统">
                     <font>
                        <Font name="Microsoft YaHei" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label styleClass="login-subtitle" text="请输入您的账号和密码">
                     <font>
                        <Font name="Microsoft YaHei" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <GridPane.margin>
                  <Insets bottom="20.0" />
               </GridPane.margin>
            </VBox>
            
            <!-- 用户名输入 -->
            <Label text="用户名:" GridPane.rowIndex="1">
               <font>
                  <Font name="Microsoft YaHei" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="usernameField" promptText="请输入用户名" styleClass="login-field" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="Microsoft YaHei" size="14.0" />
               </font>
            </TextField>
            
            <!-- 密码输入 -->
            <Label text="密码:" GridPane.rowIndex="2">
               <font>
                  <Font name="Microsoft YaHei" size="14.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" promptText="请输入密码" styleClass="login-field" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font name="Microsoft YaHei" size="14.0" />
               </font>
            </PasswordField>
            
            <!-- 记住密码和自动登录 -->
            <HBox spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <CheckBox fx:id="rememberPasswordBox" styleClass="login-checkbox" text="记住密码">
                     <font>
                        <Font name="Microsoft YaHei" size="12.0" />
                     </font>
                  </CheckBox>
                  <CheckBox fx:id="autoLoginBox" styleClass="login-checkbox" text="自动登录">
                     <font>
                        <Font name="Microsoft YaHei" size="12.0" />
                     </font>
                  </CheckBox>
               </children>
            </HBox>
            
            <!-- 登录按钮 -->
            <Button fx:id="loginButton" defaultButton="true" maxWidth="1.7976931348623157E308" onAction="#handleLogin" styleClass="login-button" text="登录" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <font>
                  <Font name="Microsoft YaHei" size="16.0" />
               </font>
               <GridPane.margin>
                  <Insets top="10.0" />
               </GridPane.margin>
            </Button>
            
            <!-- 其他操作链接 -->
            <HBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
               <children>
                  <Hyperlink fx:id="registerLink" onAction="#handleRegister" styleClass="login-link" text="注册新账号">
                     <font>
                        <Font name="Microsoft YaHei" size="12.0" />
                     </font>
                  </Hyperlink>
                  <Hyperlink fx:id="forgotPasswordLink" onAction="#handleForgotPassword" styleClass="login-link" text="忘记密码">
                     <font>
                        <Font name="Microsoft YaHei" size="12.0" />
                     </font>
                  </Hyperlink>
               </children>
               <GridPane.margin>
                  <Insets top="10.0" />
               </GridPane.margin>
            </HBox>
            
            <!-- 服务器设置 -->
            <VBox GridPane.columnSpan="2" GridPane.rowIndex="6">
               <children>
                  <Separator>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Separator>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="服务器地址:">
                           <font>
                              <Font name="Microsoft YaHei" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="serverField" prefWidth="200.0" text="http://localhost:8080">
                           <font>
                              <Font name="Microsoft YaHei" size="12.0" />
                           </font>
                        </TextField>
                        <Button fx:id="testConnectionButton" onAction="#handleTestConnection" styleClass="secondary-button" text="测试连接">
                           <font>
                              <Font name="Microsoft YaHei" size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- 状态信息 -->
            <Label fx:id="statusLabel" styleClass="status-label" text="就绪" GridPane.columnSpan="2" GridPane.rowIndex="7">
               <font>
                  <Font name="Microsoft YaHei" size="12.0" />
               </font>
               <GridPane.margin>
                  <Insets top="10.0" />
               </GridPane.margin>
            </Label>
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </GridPane>
   </center>
</BorderPane> 